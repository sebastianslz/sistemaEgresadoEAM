	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="jpa_pu">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.Empresa</class>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.SectorLaboral</class>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.ContactoEmpresa</class>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.Ciudad</class>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.Departamento</class>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.FacultadAcademica</class>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.ProgramaAcademica</class>
		<class>co.edu.eam.ingesoft.desarrollo.tallerjpa.persistencia.modelo.entidades.Egresado</class>
